{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Local HTTP Server (Port 8000)",
            "type": "python", // Benutzt den Python-Typ f端r eine saubere Ausf端hrung
            "request": "launch",
            "module": "http.server", // F端hrt 'python -m http.server' aus
            "args": [
                "8000"
            ], // Port 8000
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "serverReadyAction": {
                // NEU: Dieser Pattern nutzt einen Capture Group (\\d+)
                // um die Portnummer zu erfassen und f端r %s bereitzustellen.
                "pattern": "Serving HTTP on .* port (\\d+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}